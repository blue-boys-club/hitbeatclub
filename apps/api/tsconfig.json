{
	"compilerOptions": {
		"module": "NodeNext",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"useDefineForClassFields": false,
		"target": "ES2022",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"skipLibCheck": true,
		"allowJs": false,
		"esModuleInterop": true,
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true
	},
	"include": ["src", "test"],
	"exclude": ["node_modules", "dist", "coverage", "logs", "data"]
}
